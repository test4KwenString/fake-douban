.gheader
  display block
  position relative
  min-width 950px
  height 28px
  background-color #545652


header
  & > section
    display block
    height 28px
    color #d5d5d5

.sign-in-up
  float right
  margin-left 1em

.app-download
  float right
  margin-left 2em

.gnav
  float left
  margin-right 1em

.gheader-items-nav
  font-size 0

.more-gheader-items
  display none
  position absolute
  z-index 99
  margin-top 1px
  padding 6px 0 6px 0
  width 80px
  border 1px solid #f2f2f2
  background-color #fff
  .gheader-more-item
    text-align left
    padding-left 10%
    > a, a:link, a:visited, a:hover 
      color #333
    &:hover
      background-color #ededed


.dropdown:hover > .more-gheader-items
  display block


.gheader-item
  display inline-block
  font-size 12px
  // hack for inline-block 4px gap
  height 28px
  a
    &:hover
      color #fff
      background-color transparent

.gheader-item a,
.gheader-item a:link
  display inline-block
  height 28px
  line-height 28px
  padding 0 1em
  color #d5d5d5
  cursor pointer
  vertical-align top



#app-download-info
  display none
  position absolute
  z-index 104
  padding 10px 20px 3px
  width 231px
  left -76px
  color #666
  background-color #fff
  border 1px solid #f2f2f2
  border-top 0
  text-align center
  a,a:link,a:hover
    color #37a

.appintro 
  padding-top 150px
  font-size 24px
  font-weight 400
  background url(https://img3.doubanio.com/f/shire/73bd39f19796eec14a9070efde2490bb5e295894/pics/nav/nav_doubanapp_6@2x.png)
  background-size contain
  > h3 > span
    font-size 60%
    font-weight normal

.qrcode
  padding-top 160px
  margin-top 50px
  background url(https://img3.doubanio.com/f/shire/af392ad86cb48ed904ba64d8220b1a6fb1b4f97b/pics/nav/nav_doubanapp_6_qrcode@2x.png) no-repeat center
  background-size 160px 160px

.download-app
  margin-top 10px
  text-align center

.dropdown
  position relative



.dropdown:hover > #app-download-info
  display block

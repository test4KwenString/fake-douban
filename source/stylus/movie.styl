content_width = 950px


.movie-header-wrapper
  background-color #f0f3f5
  position relative
  overflow hidden
  margin-bottom 40px

.movie-header
  position relative
  overflow hidden
  width content_width
  margin 0 auto
  padding-top 20px

.movie-logo
  float left
  padding 0
  padding-top 2px
  font-size 1em
  a
    &:hover
      background-color transparent

.movie-search
  float left
  position relative
  margin 0 0 20px 42px
  form
    overflow hidden

.movie-search__inputbox
  float left
  width 470px
  height 32px
  line-height 28px
  border none
  border-left 1em solid #fff
  border-top 3px solid #fff
  border-bottom 3px solid #fff
  border-radius 5px 0 0 5px
  box-shadow 0 1px 1px #e0e0e0

.movie-search__submitbtn
  width 37px
  height 32px
  background-color #8a9497
  border 0
  border-radius 0 3px 3px 0
  box-shadow 0 2px 1px #e0e0e0
  cursor pointer
  &:hover
    background-color #8f999c

#inp-submit-wrapper
  float left
  position relative
  line-height normal
  &:before
    box-sizing content-box
    content ""
    position absolute
    background transparent
    z-index 1
    left 10px
    top 8px
    width 10px
    height 10px
    border 2px solid snow
    border-radius 50%
  &:after
    box-sizing content-box
    content ""
    position absolute
    left 20px
    top 20px
    width 8px
    height 2px
    transform rotate(45deg)
    background-color snow

.clearfix
  clear both

.movie-nav
  & > ul
    font-size 0
    height 39px
    padding 9px 0 9px 0
  li
    font-size 13px
    display inline-block
    margin-right 30px
  a
    &:link
      color #27a
      background transparent
    &:visited
      color #27a
    &:hover
      color #fff
      background #27a

.header-bg
  position absolute
  z-index 101
  right 50px
  bottom 6px
  a
    &:hover
      background transparent

.split-line
  position absolute
  bottom 40px
  width 100%
  border-bottom 1px solid #e5ebe4

.movie-content-wrapper
  overflow auto

.movie-content
  width content_width
  margin 0 auto
  overflow hidden

.movie-main
  width 630px
  float left
  padding-right 40px

.screening-header
  height 34px
  padding-bottom 10px
  border-bottom 1px solid #eaeaea
  margin-bottom 18px
  h4
    font-size 17px
    font-weight bold
    background-color transparent
    span
      margin-left 1em
      font-size 80%
      font-weight normal

.slider-control-panel
  float right
  overflow hidden

#slider-arrow
  float right
  margin-left 1em
  margin-top  8px

#slider-prev-btn,
#slider-next-btn
  display inline-block
  width 18px
  height @width
  font-size 18px
  text-align center
  line-height 16px
  color snow
  margin-right 6px
  padding 1px
  background-color #258dcd
  border-radius 50%
  cursor pointer

  &:hover
    background-color #2c94d4

.screening-content
  overflow hidden
  position relative
  height 270px
  > ul
    font-size 0
    white-space nowrap
    position relative
    > li
      display inline-block
      font-size 0
      overflow hidden

.screening-item
  display inline-block
  //float left
  // 在 float: left 时会有卡顿现象
  margin 0 10px 0 9.5px
  width 128px
  height 270px
  font-size 12px
  text-align center

.screening-item--poster
  height 180px
  margin-bottom 12px
  overflow hidden


.screening-item--info
  display none
  position absolute
  z-index 199
  width 250px
  background-color #fff
  border 1px solid #eee
  padding 20px 50px 30px 20px
  text-align left
  h3
    background-color #fff
    font-size 16px
    span
      color #aaa;
      font-size 80%
      padding-left 1em
  p
    padding-right 1em
    span
      padding-right 1em

.screening-item--title
  font-size 14px
  white-space nowrap
  height 22px
  overflow hidden
  h4
    background-color #fff

.screening-item--rate
  display inline-block
  margin 4px auto 2px
  height 19px

.rating-stars
  display inline-block
  margin 3px 3px 0 0
  width 55px
  height 11px
  overflow hidden
  background -webkit-image-set(url(../img/ic_rating_s.png) 1x,url(../img/ic_rating_s@2x.png) 2x) no-repeat

.rating-stars-10
  background-position 0 0
.rating-stars-9
  background-position 0 -11px 
.rating-stars-8
  background-position 0 -22px
.rating-stars-7
  background-position 0 -33px
.rating-stars-6
  background-position 0 -44px
.rating-stars-5
  background-position 0 -55px
.rating-stars-4
  background-position 0 -66px
.rating-stars-3
  background-position 0 -77px
.rating-stars-2
  background-position 0 -88px
.rating-stars-1
  background-position 0 -99px
.rating-stars-0
  background-position 0 -110px

.rating-digits
  color goldenrod

.screening-item--booking
  height 24px
  line-height 24px
  width 90px
  margin 0 auto
  padding 2px 15px
  font-size 13px
  color #fff
  background-color #258dcd
  border-radius 2px
  a:link
    color #fff


.movie-tvplay-filter
  overflow hidden
  position relative

.movie-or-tvplay
  font-size 0
  color #666
  > span 
    font-size 17px
    margin-left 10px
    margin-right 10px
  > label
    display inline-block
    font-size 17px
    font-weight 200
  > input[type="radio"]
    display none
    &:not(:checked) + label
      color #2c94d4
      background #fff
    &:checked + label
      color #666
      background-color #fff
    &:not(:checked) + label:hover
      color #fff
      background-color #2c94d4
      cursor pointer
